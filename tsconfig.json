{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "strict": true,
    "noImplicitAny": false,
    "declaration": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "noEmitOnError": true,
    "outFile": "./dist/index.d.ts",
    "emitDeclarationOnly": true,
    "lib": [
      "es2015",
      "dom",
      "webworker"
    ],
    "types": [
      "node",
      "offscreencanvas"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
